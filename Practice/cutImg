<script>
var wrapper=document.getElementById('wrapper');
var img=document.getElementById('smallImg');
img.onmousedown=function(e){
if(e.button==0){
e.target.style.opacity=0.5;
setTimeout(beginCutImg,1000);
function beginCutImg(){
  e.target.style.opacity=1;
  e.target.style.width='30%';
 var cutImg='<div class="cutImg" draggable="true">此区域为截图内容</div>';
 var eleStr='<div class="preview" ><img src="pic.jpg" id="bigImg" alt="big"></div>';
 wrapper.innerHTML+=cutImg;
 wrapper.innerHTML+=eleStr;
 var previewArea=document.getElementsByClassName('preview')[0];
 previewArea.style.height=(721*160/287)+'px';
}
}
}
</script>
